@model Hw17.Models.Dtos.UserRegisterDto
@{
    ViewData["Title"] = "افزودن کاربر جدید";
}

<div class="admin-register-container">
    <h2 class="admin-register-title">ثبت‌نام کاربر جدید</h2>

    <form asp-action="Register" method="post" class="admin-register-form">
        <div class="form-group">
            <label asp-for="Username">نام کاربری</label>
            <input asp-for="Username" class="form-control" required />
        </div>

        <div class="form-group">
            <label asp-for="Password">رمز عبور</label>
            <input asp-for="Password" type="password" class="form-control" required />
        </div>

        <div class="form-group">
            <label asp-for="FirstName">نام</label>
            <input asp-for="FirstName" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="LastName">نام خانوادگی</label>
            <input asp-for="LastName" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="PhoneNumber">شماره تلفن</label>
            <input asp-for="PhoneNumber" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="IsAdmin">نقش کاربر</label>
            <select asp-for="IsAdmin" class="form-control">
                <option value="false" selected>کاربر معمولی</option>
                <option value="true">ادمین</option>
            </select>
        </div>

        <button type="submit" class="btn btn-register">ثبت‌نام</button>
        <a href="/Admin/Users" class="btn btn-back">بازگشت</a>
    </form>
</div>
